{
    "typeAcquisition": {
        "enable": true
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "built",
        "lib": [
            "es5",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "**/*.ts",
        "bin/*.js",
        "app/config.json",
        "app/package.json",
        "package.json",
    ],
    "exclude": [
        "**/*.test.ts",
        "**/node_modules",
        "built",
        "coverage",
        "jest.config.js",
        ".eslintrc.js"
    ]
}
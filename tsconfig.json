{
    "typeAcquisition": {
        "enable": true
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "built",
        "lib": [
            "es5",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "./index.ts",
        "bin/*",
        "builder/*.ts",
        "util/*.ts",
        "cli/*.ts",
        "app/*.ts",
        "app/config.json",
        "app/package.json",
        "package.json",
    ],
}